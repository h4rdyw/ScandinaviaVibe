{% comment %}theme-check-disable{% endcomment %}

{% assign image = block.settings.image | img_url: 'master' %}

<div class="col d-flex flex-fill bg-dark border-0">         
          <div class="card d-flex flex-fill bg-dark border-0">
           <div class="img-wrapper">
             <div id="catcard" class="card-img-top lazy"  {% if highlightbox == 'true' %} style="object-fit:cover;object-position:center top;filter: brightness(110%);" {% else %} style="object-fit:cover;object-position:center top;" {% endif %}>
               {% if image != blank %}  
                 <div class="inner-img flex-fill">
                    <a href="{{ block.settings.link }}">
                        <img src="{{ block.settings.image | img_url: 'master' }}" width="100%" height="360" loading="lazy" alt="{{ block.settings.image.alt }}" style="object-fit:cover;object-position:center top;filter: brightness(110%);"> 
                        </a>
                   <div class="text-hover">{{ block.settings.hover_text }}</div>     
                 </div>
                 {% assign highlightbox = 'false' %}
   
               {% else %}             
   
                 {{ 'product-1' | placeholder_svg_tag: 'card-img-top' }}    
           
               {% endif %}
             </div>
           </div>
           
           <div class="card-body bg-light flex-column align-items-end justify-content-end">
               <p><a class="text-product-link" href="{{ block.settings.link }}">{{ block.settings.category_name }}</a></p>    
               <p>{{ block.settings.category_story }}</p>
               
           </div>  
            <div>            
                {% if specialbox == 'true' %}      
                     {% assign specialbox = 'false' %}              
                    {% assign iconstyle = '' %} 
                    <svg class="star-badge">{% render 'star-badge' %}</svg>  
                {% else %}
                     {% assign iconstyle = 'style="transform:translateX(-40px);"' %} 
               {% endif %}    
               
               {% if awardbox == 'true' %}    
                    {% assign awardbox = 'false' %}                                              
                    <svg class="award-badge" {{ iconstyle }}>{% render 'award-badge' %}</svg>  
                {% endif %}             
            </div>
   
         </div>
  </div>
  <style>
  #catcard.lazy {
      background-image: none;
      background-color: #ededed;
   }   

  </style>
  {% comment %}theme-check-enable{% endcomment %}

