{% assign showlang = section.settings.show_lang_selector %}
{% if showlang %}
  


{% form 'localization' , id: "localization_form_tag", class: "dropup" %}
<!--<div id="localeBtn" class="localeBtn">{{ 'globe.png' | asset_img_url: '50px' | img_tag }}</div>-->
<div id="localeBtn" class="localeBtn"><svg class="icon-globe" alt="wishlist cart">{% render 'icon-globe' %}</svg></div>

<div class="dropup-content">
    {% for locale in shop.published_locales %}
        <a href="#" id="localeItem" lang="{{ locale.iso_code }}">{{ locale.endonym_name }}</a>        
    {% endfor %}
</div>
<input type="hidden" name="locale_code" id="localeCode" value="{{ form.current_locale.iso_code }}">

{% endform%}
<style>
.translation-section {
    height:0;
}
</style>
{% endif %}
{% schema %}
  {
    "name": "Translation",
    "class": "translation-section",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_lang_selector",
        "label": "Show Language Selector",
        "default": false
       }
    ]
  }
{% endschema %}
