        { "type": "url", 
        "id": "button_link", 
        "label": "Button Link" 
        },
        { "type": "video_url",
          "id": "video_story_url",
          "accept": ["youtube","vimeo"],                    
          "label": "Video URL"
        },
        { "type": "text", 
            "id": "block_label_1", 
            "default": "Link",
            "label": "Block Label 1" 
          },
          { "type": "url", 
          "id": "block_link_1", 
          "label": "Block Link 1" 
          },
          { "type": "text", 
            "id": "block_label_2", 
            "default": "Link",
            "label": "Block Label 2" 
          },
          { "type": "url", 
          "id": "block_link_2", 
          "label": "Block Link 2" 
          },
          { "type": "text", 
            "id": "block_label_3", 
            "default": "Link",
            "label": "Block Label 3" 
          },
          { "type": "url", 
          "id": "block_link_3", 
          "label": "Block Link 3" 
          }          
      ]
    },
    {
      "type": "html_block",
      "name": "HTML Block",       
      "settings": [ 
        {
          "type": "page",
          "id": "page_handle",
          "label": "Select a page"
        },  
        {"type": "html",
          "id" : "htmlcontent",
        "label": "HTML content"
        }   
      ]  
    },
    {
      "type": "image_block",
      "name": "Image Block",       
      "settings": [ 
        {
          "type": "page",
          "id": "page_handle",
          "label": "Select a page"
        },  
        {"type": "image_picker",
          "id" : "imgblock",
        "label": "Image Block"
        }   
      ]  
    }
  ],
    
      "presets": [
      {
        "category": "Article Block",
        "name": "Article Block"
      }
    ]
}

{% endschema %}
{% comment %}theme-check-enable{% endcomment %}