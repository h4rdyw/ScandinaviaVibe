{% comment %}theme-check-disable{% endcomment %}

<section class="container-fluid px-0 py-0 bg-none">
    <div class="container-fluid d-flex flex-wrap row-cols-lg-4 row-cols-md-2 row-cols-sm-2 row-cols-1 m-0 px-0 py-10 bg-dark">
        {% for block in section.blocks %}
            {% render 'brand-card', block: block  %}         
   
       {% endfor %}
     </div>     
   </div>
   
   <style>
   @media only screen and (max-width: 768px) {
     .container {
       max-width: 100% !important;
     }
   }
   </style>
 

{% schema %}
    {
        "name": "Brand List",
        "max_blocks": 4,
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Heading",
                "default": "Brand List"
            }
        ],
        "blocks": [
            {
                "type": "brand_image",
                "name": "Brand",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Brand Image"
                    },
                    {
                        "type": "text",
                        "id": "brand_name",
                        "label": "Brand Name"
                    },
                    {
                        "type": "richtext",
                        "id": "brand_story",
                        "label": "Brand Story"
                    },
                    {
                        "type": "text",
                        "id": "hover_text",
                        "label": "Hover Text"
                    },
                    {
                        "type": "url",
                        "id": "link",
                        "label": "Brand Link",
                        "info": "Optional"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Brand List",
                "category": "Image",
                "blocks": [
                    {
                        "type": "brand_image"
                    },
                    {
                        "type": "brand_image"
                    },
                    {
                        "type": "brand_image"
                    },
                    {
                        "type": "brand_image"
                    }
                ]
            }
        ]

    }
{% endschema %}
{% comment %}theme-check-enable{% endcomment %}