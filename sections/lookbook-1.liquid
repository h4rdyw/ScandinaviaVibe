
{% comment %}theme-check-disable{% endcomment %}

{% assign page_handle = page.handle %}

{% for block in section.blocks %}

    {% if block.settings.page_handle == page_handle  or template == 'index' %}
        {% if block.type == 'lookbook_story' %}         

            {% if block.settings.image_story  %}            
                {% assign hero_img_url = block.settings.image_story | img_url: 'master' %} 
            {% else %}
                {% assign hero_img_url = block.settings.hero_story_img_url %}
            {% endif %}

            {% assign colortextmain = block.settings.color_text_main %}
            {% assign colortexthover1 = block.settings.color_text_hover1 %}
            {% assign fontsize_main = block.settings.font_size_main %}
                   
            {% if block.settings.show_background_color_main %}
            {% assign bgcolormain = "background-color: " | append: block.settings.color_bg_main |append: ';' %}
            {% else %} 
            {% assign bgcolormain = "background-color: transparent;" %}
            {% endif %}

            {% assign textcolormain = "color : " | append:  block.settings.color_text_main | append: ';' %}
            {% assign titlecolormain = "color : " | append:  block.settings.color_title_main | append: ';' %}
            {% assign bgmainopacity = "opacity : " | append: block.settings.bg_main_opacity| append: '%;' %}
