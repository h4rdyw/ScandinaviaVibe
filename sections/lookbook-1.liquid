                                    </div>
                              </div>    
                          </div>

                          {% if  block.settings.text_inside_box == false %}
                            <div class="col d-flex flex-fill align-self-center" style="{{ bgcolormain }}{{ bgmainopacity }}{{ textcolormain }}">
                              <p>{{ block.settings.description }}</p>
