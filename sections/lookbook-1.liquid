{% schema %} 
{ 
  "name": "Lookbok 1 Story", 
  "class": "lookbook-section", 
  "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Common Title"
        },
        {
            "type": "color",
            "id": "color_text_hover",
            "label": "Link hover color",
            "default": "#eeeeee"
          }
    ],
  "blocks": [
    {
      "type": "lookbook_story",
      "name": "Lookbook 1 - Story ",  
      "settings": [ 
        {
          "type": "page",
          "id": "page_handle",
          "label": "Select a page"
        },        
        {
          "type": "header",
          "content": "MAIN BOX"
        },
        { "type": "image_picker", 
          "id": "image_story", 
          "label": "Hero Background Image"
        },
        { "type": "url", 
          "id": "hero_story_img_url", 
          "label": "Image URL" 
        },
        { "type": "text", 
          "id": "title", 
          "default": "Example Heading",
          "label": "Heading Title"
        },
        { "type": "richtext", 
          "id": "description", 
          "default": "<p>Example paragraph</p>",
          "label": "Description" 
        },
        {
          "type": "checkbox",
          "id": "text_inside_box",
          "label": "Show Description Text Inside Main Box",
          "default": true
        },
        { "type": "text", 
          "id": "button_label", 
          "default": "Button",
          "label": "Button Label" 
        },
        { "type": "url", 
        "id": "button_link", 
        "label": "Button Link" 
        },
        { "type": "video_url",
          "id": "video_story_url",
          "accept": ["youtube","vimeo"],                    
          "label": "Video URL"
        },
        {
          "type": "color",
          "id": "color_bg_main",
          "label": "Description Background Color - Main",
          "default": "#333333"
        },          
        {
          "type":   "range",
          "id":     "bg_main_opacity",
          "min":    20,
          "max":    100,
          "step":   5,
          "unit":   "%",
          "label":  "Background Opacity",
          "default":   100      
        },
        {
          "type": "checkbox",
          "id": "show_background_color_main",
          "label": "Show Background Color - Main",
          "default": true
        },
        {
          "type": "color",
          "id": "color_title_main",
          "label": "Title color - Main",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "color_text_main",
          "label": "Text color - Main",
          "default": "#ffffff"
        },  
        {
          "type":   "range",
          "id":     "font_size_main",
          "min":    8,
          "max":    36,
          "step":   1,
          "unit":   "px",
          "label":  "Font size - Main",
          "default":   14
        },
        {
          "type": "header",
          "content": "RIGHT BOX - IMAGE 1"
        },
        {
        "type": "image_picker",
        "id": "image1",
        "label": "Image 1"
        },
        { "type": "url", 
          "id": "hero_story_img1_url", 
          "label": "Image 1 URL" 
        },
        {
          "type": "checkbox",
          "id": "img1_effect",
          "label": "Show Transition Effect - 1",
          "default": true
        },
        {
          "type": "url",
          "id": "link1",
          "label": "Link for Image 1"
        },
        
        { "type": "text", 
          "id": "title1", 
          "default": "Example Heading 1",
          "label": "Heading Image 1"
        },
        {
          "type": "richtext",
          "id": "description1",
          "label": "Description 1"
        },
        {
          "type": "color",
          "id": "color_text_hover1",
          "label": "Link hover color (All)",
