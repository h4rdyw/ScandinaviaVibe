                                        <a href="{{ block.settings.button_link }}" class="btn btn-secondary">{{ block.settings.button_label }}</a>  
                                    {% endif %}                   
                                </div>
                                
                                {% if block.settings.text_inside_box %}
                                  <div style="{{ bgcolormain }}{{ bgmainopacity }}{{ textcolormain }}"><p>{{ block.settings.description }}</p></div>
                                {% endif %}
                              </div>    

                              </div>

                              {%if  block.settings.text_inside_box == false %}    

                              <div class="col px-4 d-flex flex-fill align-self-center" style="{{ bgcolormain }}{{ bgmainopacity }}{{textcolormain }}">
                              <p>{{ block.settings.description }}</p>
                              </div> 
