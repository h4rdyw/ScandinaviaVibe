            <!-- opening tag omitted here, declared in the page.lookbok.liquid -->
            {% comment %} <div class="container-fluid border-0 shadow-lg border-0 m-0">                 
            {% endcomment %}
               
                <div class="row row-cols-lg-2 row-cols-md-2 row-cols-1 d-flex flex-wrap shadow-0 p-0 py-5">                    
                

                  <div class="col d-flex flex-column flex-fill px-1" style="{{ bgcolormain }}{{ bgmainopacity }}">
                      <!-- /left/ -->

                      {% if block.settings.video_story_url %}

                          <div class="col d-flex flex-fill" style="{{ bgcolormain }}{{ bgmainopacity }}">
