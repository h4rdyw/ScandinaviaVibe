                        {% endif %}

                        {% assign textcolor2 = "color : " | append:  block.settings.color_text2 | append: ';' %}
                        {% assign titlecolor2= "color : " | append:  block.settings.color_title2 | append: ';' %}

                        <!-- /right 2/ -->

                        <div class="col d-flex flex-fill w-50 h-50 customscrollbar" style="{{ bgcolor2 }}{{ textcolor2}}scroll-behavior: smooth;overflow-y:auto;overflow-x:auto;scrollbar-width: none;">
                            
                            <div class="d-flex flex-wrap align-items-center">
                                {% if hero_img2_url %}
                                {% if block.settings.img2_effect == true %}

                                <div id="hero-1a" class="lazy" style="background: url({{ hero_img2_url }}) no-repeat center center;background-size: cover;height: 100%;width: 100%;padding: 100px;transition: transform 3s;{{ bgcolor2 }}"><a class="lookbook1-box2 lookbook1-box2--link" style="{{ titlecolor2 }}margin-left:-25%;position:sticky;top:10px;" href="{{ block.settings.link2 }}"><h4 class="d-inline-block h4 px-2 py-2" style="{{ bgcolor2 }}opacity:75%;">{{ block.settings.title2 }}</h4></a></div>

                                {% else %}

                                <div id="hero-1b" class="lazy" style="background: url({{ hero_img2_url }}) no-repeat center center;background-size: cover;height: 100%;width: 100%;padding: 100px;{{ bgcolor2 }}"><a class="lookbook1-box2 lookbook1-box2--link" style="{{ titlecolor2 }}margin-left:-25%;position:sticky;top:10px;" href="{{ block.settings.link2 }}"><h4 class="d-inline-block h4 px-2 py-2" style="{{ bgcolor2 }}opacity:75%;">{{ block.settings.title2 }}</h4></a></div>

                                {% endif %}

                                {% else if block.setting.link2 and block.settings.title2 %}
                                <div><a class="lookbook1-box2 lookbook1-box2--link" href="{{ block.settings.link2 }}" style="{{ titlecolor2 }}"><h4 class="d-inline-block h4 mx-2 px-2 py-2">{{ block.settings.title2 }}</h4></a></div>

                                 {% endif %}                        

                                <div class="hero-2-stuff d-flex flex-fill mx-4"  style="{{ bgcolor2 }}{{textcolor2 }}">
                                    
                                    <p>{{ block.settings.description2 }}</p>
                                    
                                </div>    
                            </div>   
                        </div>

                        {% if block.settings.image3 %}
                
                            {% assign hero_img3_url = block.settings.image3 | img_url: 'medium' %} 
                        {% else %}
                            {% assign hero_img3_url = block.settings.hero_story_img3_url %}
                        {% endif %}

                        {% assign colortext3 = block.settings.color_text3 %}
                        {% assign colortexthover1 = block.settings.color_text_hover1 %}
                        
                        {% if block.settings.show_background_color3 %}
                        {% assign bgcolor3 = "background-color: " | append: block.settings.color_bg3 | append: ';' %}
                        {% else %} 
                        {% assign bgcolor3 = "background-color: transparent;" %}
                        {% endif %}

                        {% assign textcolor3 = "color : " | append:  block.settings.color_text3 | append: ';' %}
                        {% assign titlecolor3= "color : " | append:  block.settings.color_title3 | append: ';' %}

                        <!-- /right 3/ -->
                        <div class="col d-flex flex-fill w-50 h-50 customscrollbar" style="{{ bgcolor3 }}{{ textcolor3}}scroll-behavior: smooth;overflow-y:auto;overflow-x:auto;scrollbar-width: none;">
                            <div class="d-flex flex-wrap align-items-center">

                            {% if hero_img3_url %}                

                            {% if block.settings.img3_effect == true %}

                                <div id="hero-1a" class="lazy" style="background: url({{ hero_img3_url }}) no-repeat center center;background-size: cover;height: 100%;width: 100%;padding: 100px;transition: transform 3s;{{ bgcolor3 }}"><a class="lookbook1-box3 lookbook1-box3--link" style="{{ titlecolor3 }}margin-left:-25%;position:sticky;top:10px;" href="{{ block.settings.link3 }}"><h4 class="d-inline-block h4 px-2 py-2" style="{{ bgcolor3 }}opacity:75%;">{{ block.settings.title3 }}</h4></a></div>
                              {% else %}
                                <div id="hero-1b" class="lazy" style="background: url({{ hero_img3_url }}) no-repeat center center;background-size: cover;height: 100%;width: 100%;padding: 100px;{{ bgcolor3 }}"><a class="lookbook1-box3 lookbook1-box3--link" style="{{ titlecolor3 }}margin-left:-25%;position:sticky;top:10px;" href="{{ block.settings.link3 }}"><h4 class="d-inline-block h4 px-2 py-2" style="{{ bgcolor3 }}opacity:75%;">{{ block.settings.title3 }}</h4></a></div>

                            {% endif %}   

                                <div class="hero-2-stuff d-flex flex-fill mx-4" style="{{ bgcolor3 }}{{textcolor3 }}">
                                    
                                  <p>{{ block.settings.description3 }}</p>
                                  
                              </div>                            

                            {% else if block.settings.link3 and block.settings.title3 %}
                                <div><a class="lookbook1-box3 lookbook1-box3--link" href="{{ block.settings.link3 }}" style="{{ titlecolor3 }}"><h4 class="d-inline-block h4 mx-2 px-2 py-2">{{ block.settings.title3 }}</h4></a></div>
                                    
                            {% endif %}    

                                <div class="hero-2-stuff d-flex flex-fill mx-4" style="{{ bgcolor3 }}{{textcolor3 }}">
                                    
                                    <p>{{ block.settings.description3 }}</p>
                                    
                                </div>                            
                            </div>   

                            {% comment %} Pals, however hard they try,
                        Will always be understanding.
                        Now perceptive is just the thing,
                        To get me wondering if pals are savvy. {% endcomment %}
                        </div>

                        {% if block.settings.image4 %}
                
                            {% assign hero_img4_url = block.settings.image4 | img_url: 'medium' %} 
                        {% else %}
                            {% assign hero_img4_url = block.settings.hero_story_img4_url %}
                        {% endif %}

                        {% assign colortext4 = block.settings.color_text4 %}
                        {% assign colortexthover1 = block.settings.color_text_hover1 %}
                        
                        {% if block.settings.show_background_color4 %}
                        {% assign bgcolor4 = "background-color: " | append: block.settings.color_bg4 | append: ';' %}
