  <!-- Hero slider-->
{% comment %}theme-check-disable{% endcomment %}
{% assign page_handle = page.handle %}
{% assign colortexthover = section.settings.color_text_hover %}

{% for block in section.blocks %}

  {% if block.settings.unique_id %}
    {% assign swiper_id = block.settings.unique_id %}  
    {% endif %}
  
  {% if block.settings.slide_effect %}
    {% assign slide_effect = block.settings.slide_effect %}
  {% endif %}

  {% if block.settings.delay %}
    {% assign slide_delay = block.settings.delay %}
  {% endif %}

  {% if block.settings.speed %}
    {% assign slide_speed = block.settings.speed %}
  {% endif %}

  {% if block.settings.height %}
    {% assign slider_height = block.settings.height %}
  {% endif %}

  <section class="container-fluid mx-0 px-0 py-0">      
  {% if slider_height  %}
      <style scoped>
        .swiper-container-{{ swiper_id }} {
          overflow: hidden;
          height: {{ slider_height }}vh !important;          
        }          
      </style>
  {% endif %}  
  
  <div class="swiper-container swiper-container-{{ swiper_id }}" id="hero-slider-{{- swiper_id -}}" unique-id="{{ swiper_id }}" effect="{{ slide_effect }}" delay="{{ slide_delay }}" speed="{{ slide_speed }}">
     <div class="swiper-wrapper">

    {% if block.settings.page_handle == page_handle  or template == 'index' %}
        {% if block.type == 'hero_slider' %}         
        
            {% if block.settings.image_slide != blank %}
              {% assign hero_url = block.settings.image_slide | img_url: 'master' %} 
            {% else %}
              {% assign hero_url = block.settings.hero_slide_img_url %}
            {% endif%}
             <style scoped>              
                  .slide-1-{{ swiper_id }} {
                    background: url({{ hero_url }}) no-repeat center center;
                    background-size: cover;                    
                  }                              
              </style>      

            {% if block.settings.image_mobile_slide != blank %}
              {% assign hero_url_mobile = block.settings.image_mobile_slide | img_url: 'master' %} 
              <style scoped>              
                @media only screen and (max-width: 499px) {
                  .slide-1-{{ swiper_id }} {
                    background: url({{ hero_url_mobile }}) no-repeat center center;
                    background-size: cover;                    
                  }
                }               
              </style>                          
            {% endif %}
            
            {% if block.settings.video_slide_url != blank %}
              {% assign hero_url_video = block.settings.video_slide_url %}   
            {% endif %}
            


            {% assign colortextmain = block.settings.color_text_main %}
            {% assign fontsize_main = block.settings.font_size_main %}
                   
            {% if block.settings.show_background_color_main %}
            {% assign bgcolormain = "background-color: " | append: block.settings.color_bg_main |append: ';' %}
            {% else %} 
            {% assign bgcolormain = "background-color: transparent;" %}
            {% endif %}

            {% assign textcolormain = "color : " | append:  block.settings.color_text_main | append: ';' %}
            {% assign titlecolormain = "color : " | append:  block.settings.color_title_main | append: ';' %}
            {% assign bgmainopacity = "opacity : " | append: block.settings.bg_main_opacity | append: '%;' %}
            {% assign slide_effect = block.settings.slide_effet %}
         
      
   
            <div class="swiper-slide hero bg-center bg-cover d-flex align-items-center slide-1-{{ swiper_id }}">
              <div class="container-fluid">
                <div class="row text-lg-center">
                  <div class="col-lg-8">
                    <p class="h6 text-uppercase text-muted mb-3">{{ block.settings.title }}</p>
                    <h1 class="hero-heading line-height-sm mb-2 title" data-swiper-parallax="-200">{{ block.settings.header }}</h1>
                    <div class="row">
                      <div class="col-lg-5 mx-auto">
                        <p class="font-weight-light text-muted mb-4 mt-3 subtitle" data-swiper-parallax="-400">{{ block.settings.description }}</p>
                      </div>
                    </div><a class="btn btn-primary text" href="{{ block.settings.button_link }}" data-swiper-parallax="-600"> <i class="fas fa-shopping-bag me-2"></i>{{ block.settings.button_label }}</a>
                  </div>
                </div>
              </div>
            </div>

            {% if block.settings.image_slide2 != blank %}
              {% assign hero_url2 = block.settings.image_slide2 | img_url: 'master' %} 
            {% else %}
              {% assign hero_url2 = block.settings.hero_slide_img_url2 %}
            {% endif%}            

            {% assign colortextmain2 = block.settings.color_text_main2 %}
            {% assign fontsize_main2 = block.settings.font_size_main2 %}
                   
            {% if block.settings.show_background_color_main2 %}
            {% assign bgcolormain2 = "background-color: " | append: block.settings.color_bg_main2 |append: ';' %}
            {% else %} 
            {% assign bgcolormain2 = "background-color: transparent;" %}
            {% endif %}

            {% assign textcolormain2 = "color : " | append:  block.settings.color_text_main2 | append: ';' %}
            {% assign titlecolormain2 = "color : " | append:  block.settings.color_title_main2 | append: ';' %}
            {% assign bgmainopacity2 = "opacity : " | append: block.settings.bg_main_opacity2 | append: '%;' %}
         
            <style scoped>              
                  .slide-2-{{ swiper_id }} {
                    background: url({{ hero_url2 }}) no-repeat center center;
                    background-size: cover;                    
                  }                              
            </style>      

            {% if block.settings.image_mobile_slide2 != blank %}
              {% assign hero_url_mobile2 = block.settings.image_mobile_slide2 | img_url: 'master' %} 
              <style scoped>              
                @media only screen and (max-width: 499px) {
                  .slide-2-{{ swiper_id }} {
                    background: url({{ hero_url_mobile2 }}) no-repeat center center;
                    background-size: cover;                    
                  }
                }               
              </style>              

            
            {% endif %}

            <div class="swiper-slide hero bg-center bg-cover d-flex align-items-center slide-2-{{ swiper_id }}">
              <div class="container-fluid">
                <div class="row text-lg-center">
                  <div class="col-lg-8">
                    <p class="h6 text-uppercase text-muted mb-3">{{ block.settings.title2 }}</p>
                    <h1 class="hero-heading line-height-sm mb-2 title" data-swiper-parallax="-200">{{ block.settings.header2 }}</h1>
                    <div class="row">
                      <div class="col-lg-5 mx-auto">
                        <p class="font-weight-light text-muted mb-4 mt-3 subtitle" data-swiper-parallax="-400">{{ block.settings.description2 }}</p>
                      </div>
                    </div><a class="btn btn-primary text" href="{{ block.settings.button_link2 }}" data-swiper-parallax="-600"> <i class="fas fa-shopping-bag me-2"></i>{{ block.settings.button_label2 }}</a>
                  </div>
                </div>
              </div>
            </div>

            {% if block.settings.image_slide3 != blank %}
              {% assign hero_url3 = block.settings.image_slide3 | img_url: 'master' %} 
            {% else %}
              {% assign hero_url3 = block.settings.hero_slide_img_url3 %}
            {% endif%}

            {% if block.settings.image_mobile_slide3 != blank %}
              {% assign hero_url_mobile3 = block.settings.image_mobile_slide3 | img_url: 'master' %} 
            {% else %} 
              {% assign hero_url_mobile3 = hero_url3 %} 
            {% endif %}

            {% assign colortextmain3 = block.settings.color_text_main3 %}
            {% assign fontsize_main3 = block.settings.font_size_main3 %}
                   
            {% if block.settings.show_background_color_main3 %}
            {% assign bgcolormain3 = "background-color: " | append: block.settings.color_bg_main3 |append: ';' %}
            {% else %} 
            {% assign bgcolormain3= "background-color: transparent;" %}
            {% endif %}

            {% assign textcolormain3 = "color : " | append:  block.settings.color_text_main3 | append: ';' %}
            {% assign titlecolormain3 = "color : " | append:  block.settings.color_title_main3 | append: ';' %}
            {% assign bgmainopacity3 = "opacity : " | append: block.settings.bg_main_opacity3 | append: '%;' %}
            {% assign slide_effect = block.settings.slide_effet %}
         
            <div class="swiper-slide hero bg-center bg-cover d-flex align-items-center" style="background: url({{ hero_url3 }})">
              <div class="container-fluid">
                <div class="row text-lg-center">
                  <div class="col-lg-8">
                    <p class="h6 text-uppercase text-muted mb-3">{{ block.settings.title }}</p>
                    <h1 class="hero-heading line-height-sm mb-2 title" data-swiper-parallax="-200">{{ block.settings.header3 }}</h1>
                    <div class="row">
                      <div class="col-lg-5 mx-auto">
                        <p class="font-weight-light text-muted mb-4 mt-3 subtitle" data-swiper-parallax="-400">{{ block.settings.description3 }}</p>
                      </div>
                    </div><a class="btn btn-primary text" href="{{ block.settings.button_link3 }}" data-swiper-parallax="-600"><i class="fas fa-shopping-bag me-2"></i>{{ block.settings.button_label3 }}</a></div>
                </div>
              </div>
            </div>         
          </div>
        {% endif %}
      {% endif %}
      <div class="swiper-pagination-{{ swiper_id }} px-4 py-2 text-end h5 font-weight-light"></div>
    </div>

 
  </section>
    {% endfor %}

          
    
