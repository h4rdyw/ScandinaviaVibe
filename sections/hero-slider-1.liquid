<script>
    var sliderID = document.querySelectorAll('.swiper-container');
    console.log(sliderID);

    var firstSlide = Math.floor(Math.random() * 3)

    sliderID.forEach( (el) => {
      var uniqID = el.getAttribute("unique-id");
      //var slideEffect = sliderID.getAttribute("effect");
      console.log(uniqID);
      var swiperName = el.id;
      console.log(swiperName);
      var slideEffect = el.attributes['effect'].value;
      console.log(slideEffect);
      var slideSpeed = el.attributes['speed'].value;
      console.log(slideSpeed);
      var slideDelay = el.attributes['delay'].value;
      console.log(slideDelay);
      

      var $swiperName = new Swiper( `#${swiperName}`, {
              parallax: true,
              speed: +slideSpeed,
              effect: slideEffect,
              initialSlide: firstSlide,
              autoplay: {
                  delay: +slideDelay,
                  disableOnInteraction: true,
              },
              pagination: {
                  el: `.swiper-pagination-${uniqID}`,
                  type: "custom",
                  renderCustom: function (swiper, current, total) {
                      return (
                          ' <span class="h2">' +
                          ("0" + current).slice(-2) +
                          "</span> " +
                          ' <span class="swiper-divider">/</span> ' +
                          ' <span class="text-muted">' +
                          ("0" + total).slice(-2)
                      );
                      +"</span> ";
                  },
              },
          });
          console.log($swiperName);    
    })



</script>
