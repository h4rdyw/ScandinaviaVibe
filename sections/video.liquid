<div class="container my-20 py-20">


   <div class="ratio ratio-16x9">
      
         {% assign item = section.settings %}
         <iframe src="https://www.youtube.com/embed/{{ item.video_url.id }}" allowfullscreen></iframe>
       
     
   </div>

   </div>
   {% comment %} <div class="container">
      <h2>Responsive Embed</h2>
      <p>Create a responsive video and scale it nicely to the parent element with an 16:9 aspect ratio</p>
      <div class="embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/tgbNymZ7vqY"></iframe>
      </div>
    </div>
     {% endcomment %}
 
 
 {% schema %}
   {
     "name": "Video",
     "settings": [
         {
           "type": "video_url",
           "id": "video_url",
           "label": "YouTube video URL",
           "accept": ["youtube"]
         }
  ]
   }
 {% endschema %}