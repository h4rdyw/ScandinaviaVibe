                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                }
            ]
        },
          {
            "name" : "SidebarImage",
            "type" : "image",
            "settings" : [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title",
                    "default": "Sidebar Title"

                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "image"
                },
                {
                    "type": "url",
                    "id": "url",
                    "label": "Link"
                }
            ]
        },
        {
          "name": "Sidebar Text",
          "type": "text",
          "settings": [
              {
                  "type": "text",
                  "id": "title",
                  "label": "Title",
                  "default": "Sidebar Title"

              },
              {
                  "type": "richtext",
                  "id": "description",
                  "label": "Description"
              }
          ]
        }
      ]
     }
