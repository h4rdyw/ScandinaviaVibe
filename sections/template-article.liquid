         "tag": "section",
         "blocks": [
             {
                 "type": "featured_image",
                 "name": "Featured Image",
                 "limit": 1
             },
             {
                "type": "title",
                "name": "Article Title",
                "limit": 1
            },
            {
                "type": "article_meta",
                "name": "Article Meta",
                "limit": 1
            },
            {
                "type": "content",
