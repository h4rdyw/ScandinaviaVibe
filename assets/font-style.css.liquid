    border-width: 0px;
    border-radius: 0;
    border-color: none;
  }
    
  .btn-reg {
    display: inline-block;
    font-family: {{ font_body.family }}, {{ font_body.fallback_families }};
    font-size: 1rem;
    font-weight: 800;
    letter-spacing: 1.5px;
    padding: 11px 30px;
    background-color: {{ buttoncolor }};
    background-image: linear-gradient(to bottom,{{ buttoncolor }},#11171B);
    color: #fff;
    text-align: center;
    text-transform: uppercase;
    border-width: 0px;
    border-radius: 0;
    border-color: none;
  }
  
  .btn-reg:hover {
    filter: brightness(120%);
  }
  
  a.btn-reg:hover {
    color: white;
  }

  {% comment %} .btn-reg:focus {
    outline: 3px solid {{ producttextcolorhover }};
    outline-offset: 0;
  } {% endcomment %}


  a {
      text-decoration: none;
      color: {{ producttextcolor }};
  }

  a:hover {
    text-decoration: none;
    {% if navbarbgcolor == '#ffffff' %}
      color: black;
    {% else %}
      color: {{ bodytextcolorhover }};    
    {% endif %}
