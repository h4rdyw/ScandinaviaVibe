/* BUTTON BRIGHTNESS */
{% comment %} button:hover {
  filter: brightness(120%); 
}

button:active {
  outline: 3px solid {{ producttextcolorhover }};
  outline-offset: 0;
}

button:focus {
  outline: 3px solid {{ producttextcolorhover }};
  outline-offset: 0;
} {% endcomment %}

input:focus {
  outline: 3px solid {{ navbarbgcolor }} !important;
  outline-offset: 0;
}
 select:focus {
  outline: 3px solid {{ navbarbgcolor }} !important;
  outline-offset: 0;
 }
a.btn {
  display: inline-block;
  font-family: {{ font_body.family }}, {{ font_body.fallback_families }};
  font-size: 1rem;
  font-weight: 800;
  letter-spacing: 1.5px;
  padding: 11px 30px;
  background-color: {{ navbarbgcolor }};
  background-image: linear-gradient(to bottom,{{ navbarbgcolor }},#11171B);
  color: #fff;
  text-align: center;
  text-transform: uppercase;
  border-radius: 0;
}

  a.btn:hover {
    filter: brightness(120%);    
  }

  a.btn:focus {
    outline: 3px solid {{ producttextcolorhover }};
    outline-offset: 0;
  }

  a.btn:active {
    outline: 3px solid {{ producttextcolorhover }};
    outline-offset: 0;
  }  

  .btn-add-to-cart {
    display: inline-block;
    font-family: {{ font_body.family }}, {{ font_body.fallback_families }};
    font-size: 1.25rem;
    font-weight: 800;
    letter-spacing: 1.5px;
    padding: 11px 30px;
    background-color: {{ buttoncolor }};
    background-image: linear-gradient(to bottom,{{ buttoncolor }},#11171B);
    color: #fff;
    text-align: center;
    text-transform: uppercase;
    border-width: 0px;
    border-radius: 0;
    border-color: none;   
  }  

  .btn-add-to-cart:hover {
    filter: brightness(120%) saturate(120%);
  }

  {% comment %} .btn-add-to-cart:focus {
    outline: 3px solid {{ navbarbgcolor }};
    outline-offset: 0;
  }

  .btn-add-to-cart:active {
    outline: 3px solid {{ navbarbgcolor }};
    outline-offset: 0;
  } {% endcomment %}

  
  .btn-add-to-cart:disabled {
    display: inline-block;
    font-family: {{ font_body.family }}, {{ font_body.fallback_families }};
    font-size: 1rem;
    font-weight: 800;
    letter-spacing: 1.5px;
    padding: 11px 30px;
    background-color: #ededed;
    background-image: linear-gradient(to bottom,#ededed,#11171B);
    color: #fff;
