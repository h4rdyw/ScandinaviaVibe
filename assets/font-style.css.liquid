	opacity: 1;
	width: 32x;
	height: 32px;
  padding-left: 1px;
  padding-right: 1px;
	position: absolute;
	top: 5px;
	left: 45px;
	transition: 0.15s;
	pointer-events: none;
  align-items: start;
}

.star-badge {
	opacity: 1;
	width: 32px;
	height: 32px;
  padding-left: 1px;
  padding-right: 1px;
	position: absolute;
	top: 5px;
	left: 5px !important;
	transition: 0.15s;
	pointer-events: none;
}


.tag-badge {
	opacity: 1;
	width: 24.5px;
	height: 24.5px;
	position: relative;
	/* top: 5px; */
	/* left: 25px; */
	transition: 0.15s;
	pointer-events: none;
}

/* BACK TO TOP */
#btn-back-to-top {
    position: fixed;
    border-radius: 50%;
    background-color: {{ navbarbgcolor }};    
    background-image: linear-gradient(to bottom,{{ navbarbgcolor }},#11171B);
    bottom: 100px;
    right: 25px;
    display: none;
  }


  /* TRANSITION WRAPPER for collection page */
  .img-wrapper {  
    width: 100%;
    height: 100%;
    overflow: hidden; 
  }
  
  .inner-img {
    transition: 0.3s ease;
  }
  
  .inner-img:hover {
      transform: scale(1.1);
  }
    
  /* Original text overlay */
  .text-hover {
    opacity: 0;
    font-family: {{ font_header.family }}, {{ font_header.fallback_families }};
    color: #fff;
    font-size: 2rem;
    line-height: 1.5em;
    text-shadow: 2px 2px 2px #000;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;  
  }

  /*
  .inner-img .hover {
    background-color: rgba(0,0,0,0.5);
  }
  */
  
  /* New overlay appearance on hover */
  .inner-img:hover .text-hover {
    opacity: 1;
    z-index: 1;
    pointer-events: none;
  }
  
