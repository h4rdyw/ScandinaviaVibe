{%- liquid 
    assign bodybgcolor = settings.body_bgcolor
    assign font_navbar = settings.navbar_text_font
    assign font_header = settings.header_text_font
    assign font_body = settings.body_text_font
    assign font_producttitle = settings.product_title_font
    assign font_productdescription = settings.product_description_font    
    assign root_font_size = settings.root_font_size_pct        
    assign navbarbgcolor = settings.navbar_color
    assign navbartextcolor = settings.navbar_textcolor
    assign navbarbgopacity = settings.navbar_opacity
    assign producttextcolor = settings.product_textcolor
    assign producttextcolorhover = settings.product_textcolor_hover

-%}

{{ font_header | font_face }}
{{ font_navbar | font_face }}
{{ font_body | font_face }}
{{ font_producttitle | font_face }}
{{ font_productdescription | font_face }}

{% if root_font_size == 62 %}

  <!-- default font size is 62.50% of 1rem (16px) root , settings does not allow faction, set it here -->
    :root {
        font-size: 62.5%;    }
{% else %}        
:root {
    font-size: {{ root_font_size }}%;    
}

{% endif %}
 

h1,h2,h3,h4,h5.h6,button {
    font-family: {{ font_header.family }}, {{ font_header.fallback_families }};
}

html {
    scroll-behavior: smooth;
}

body {
    font-family: {{ font_body.family }}, {{ font_body.fallback_families }};
    background-color: {{ bodybgcolor }};
    -webkit-font-smoothing: antialiased;
}

header {
    padding: 0 25px;
}
img {
    aspect-ratio: attr(width) / attr(height);
    object-fit: cover;
  }

.text-navbar {
    color: {{ navbartextcolor }};
    font-family: {{ font_navbar.family }}, {{ font_navbar.fallback_families }};
    text-decoration: none;    
}

.text-product-link {
    color: {{ producttextcolor }};
    font-family: {{ font_producttitle.family }}, {{ font_producttitle.fallback_families }};
    text-decoration: none;
}

.text-product-link:hover {
    color: {{ producttextcolorhover }};
    text-decoration: underline;
}

.text-product-title {
    /* color: {{ producttextcolor }};*/
    font-family: {{ font_producttitle.family }}, {{ font_productdescription.fallback_families }};
    font-weight: 600;
    text-decoration: none;
}

.text-product-desc {
    /* color: {{ producttextcolor }};*/
    font-family: {{ font_productdescription.family }}, {{ font_productdescription.fallback_families }};
    text-decoration: none;
}

.text-header-title {
  font-family: {{ font_body.family }}, {{ font_body.fallback_families }};
  font-weight: 600;
  text-decoration: none;
}

.text-line {
    border-bottom: 1px solid;
    margin-bottom: -1px;
}
.text-underline-hover {
    text-decoration-line: none !important;
}

.text-underline-hover:hover {
    text-decoration-line: underline;
}
 
.navbar-color {
    background-color: {{ navbarbgcolor }};
    opacity: {{ navbarbgopacity }}%;
}

nav .navbar-nav li a {
    color: {{ navbartextcolor }}!important;
    font-family: {{ font_navbar.family }}, {{ font_navbar.fallback_families }};
}

.navbar-light .navbar-brand {
    color: {{ navbartextcolor }}!important;   
    font-family: {{ font_navbar.family }}, {{ font_navbar.fallback_families }};
}

.nav-link {
    color: {{ navbartextcolor }}!important;   
    font-family: {{ font_navbar.family }}, {{ font_navbar.fallback_families }};
}

#btn-back-to-top {
    position: fixed;
    border-radius: 50%;
    background-color: {{ navbarbgcolor }};    
    background-image: linear-gradient(to bottom,{{ navbarbgcolor }},#11171B);
    bottom: 100px;
    right: 25px;
    display: none;
  }
  /* transition wrapper for collection page */
  .img-wrapper {  
    width: 100%;
    height: 100%;
    overflow: hidden; 
  }
  
  .inner-img {
    transition: 0.3s ease;
  }
  
  .inner-img:hover {
      transform: scale(1.1);
  }
  
  
  /* Original text overlay */
  .text-hover {
    opacity: 0;
    font-family: {{ font_header.family }}, {{ font_header.fallback_families }};
    color: #fff;
    font-size: 2rem;
    line-height: 1.5em;
    text-shadow: 2px 2px 2px #000;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;  
  }
  /*
  .inner-img .hover {
    background-color: rgba(0,0,0,0.5);
  }
  */
  
  /* New overlay appearance on hover */
  .inner-img:hover .text-hover {
    opacity: 1;
    z-index: 1;
    pointer-events: none;
  }

  a.btn {
    display: inline-block;
    font-family: {{ font_body.family }}, {{ font_body.fallback_families }};
    font-size: 12px;
    font-weight: 700;
    letter-spacing: 1.5px;
    padding: 11px 30px;
    background-color: {{ navbarbgcolor }};
    background-image: linear-gradient(to bottom,{{ navbarbgcolor }},#11171B);
    color: #fff;
    text-transform: uppercase;
  }
  
  a.btn:hover {
    background-image: linear-gradient(to bottom,#fff,#11171B);
  }

  .btn-add-to-cart {
    display: inline-block;
    font-family: {{ font_body.family }}, {{ font_body.fallback_families }};
    font-size: 12px;
    font-weight: 800;
    letter-spacing: 1.5px;
    padding: 11px 30px;
    background-color: #0AC661;
    background-image: linear-gradient(to bottom,#0AC661,#11171B);
    color: #fff;
    text-transform: uppercase;
  }
  
  .btn-add-to-cart:hover {
    background-image: linear-gradient(to bottom,#fff,#11171B);
  }

  .btn-reg {
    display: inline-block;
    font-family: {{ font_body.family }}, {{ font_body.fallback_families }};
    font-size: 12px;
    font-weight: 800;
    letter-spacing: 1.5px;
    padding: 11px 30px;
    background-color: {{ navbarbgcolor }};
    background-image: linear-gradient(to bottom,{{ navbarbgcolor }},#11171B);
    color: #fff;
    text-transform: uppercase;
  }
  
  .btn-reg:hover {
    background-image: linear-gradient(to bottom,#fff,#11171B);
  }

  a {
      text-decoration: none;
      color: {{ producttextcolor }};
  }

  a:hover {
    text-decoration: none;
    {% if navbarbgcolor == '#ffffff' %}
      color: black;
    {% else %}
      color: {{ navbarbgcolor }};    
    {% endif %}
    font-weight: 900;
    
    
}

.text-cart-empty {
    color: black;
    opacity: 0.2;
    font-size: 2rem;
    font-weight: 700;
    text-align: center;
    padding-top: 25px;
}

.status_fulfilled {
  color: blue;
  text-transform: uppercase;
  font-weight: 900;
}

.status_unfulfilled {
  color: red;
  text-transform: uppercase;
  font-weight: 900;
}

.status_paid {
  color: green;
  text-transform: uppercase;
  font-weight: 900;
}

.status_unpaid {
  color: red;
  text-transform: uppercase;
  font-weight: 900;
}
.accordion-button {
  color: {{ navbarbgcolor }};
  font-weight: 500;
}

.accordion-button:not(.collapsed) {
  color: {{ navbarbgcolor }};
  background-color: transparent;
  font-weight: 700;
}
.accordion-flush .accordion-collapse {
  font-weight: 600;
}