}

.navbar-color {
    background-color: {{ navbarbgcolor }};
    opacity: {{ navbarbgopacity }}%;
}

nav .navbar-nav li a {
    color: {{ navbartextcolor }}!important;
    font-family: {{ font_navbar.family }}, {{ font_navbar.fallback_families }} !important;
}

.navbar-light .navbar-brand {
    color: {{ navbartextcolor }}!important;   
    font-family: {{ font_navbar.family }}, {{ font_navbar.fallback_families }} !important;
}

.nav-link {
    /* color: {{ navbartextcolor }}!important; */
    font-family: {{ font_navbar.family }}, {{ font_navbar.fallback_families }} !important;
}

.nav-link-prd {
  color: {{ navbartextcolor }}!important; */
  font-family: {{ font_productdescription.family }}, {{ font_productdescription.fallback_families }} !important;
}

body .navbar-light .navbar-toggler {
  color:{{ navbartextcolor }}!important; 
  border-color:{{ navbartextcolor }}!important; 
}

/* back arrow */
.menu-button {
	position: relative;
	cursor: pointer;
	transition: 0.15s;	
}

.menu-button:hover {
  padding-left: 15px;
}

.menu-arrow-icon {
	transform: rotate(180Deg);
	opacity: 0;
	width: 11.5px;
	height: 12px;
	position: absolute;
	top: 5px;
	left: -15px;
	transition: 0.15s;
	pointer-events: none;
}
.menu-button:hover .menu-arrow-icon {
	opacity: 1;
	left: 0;
}

/* BADGES */
.heart-badge {  
	opacity: 1;
	position: relative;
  width: 32px;
	height: 32px;
  padding-left: 1px;
  padding-right: 1px;  
	transition: 0.15s;
  fill: transparent;
  stroke: transparent;
  transition: fill 0.3s ease;
  fill: white;
  transform: translateY(7px);
}
.wishlist-badge {  
	opacity: 1;  
	width: 32px;
	height: 32px;
  padding-left: 1px;
  padding-right: 1px;
	position: absolute;
	bottom: 1px;
	left: 5px;
  border:none;
  background-color: transparent;
	transition: 0.15s;
  fill: transparent;
  stroke: #000;
  transition: fill 0.3s ease;
}

.star-badge {
	opacity: 1;
	width: 32px;
	height: 32px;
  padding-left: 1px;
  padding-right: 1px;
	position: absolute;
	top: 5px;
	left: 5px !important;
	transition: 0.15s;
	pointer-events: none;
}

.award-badge {  
	opacity: 1;
	width: 32px;
	height: 32px;
  padding-left: 1px;
  padding-right: 1px;
	position: absolute;
	top: 5px;
	left: 35px;
	transition: 0.15s;
	pointer-events: none;
}

.tag-badge {
	opacity: 1;
	width: 32px;
	height: 32px;
	position: relative;
	/* top: 5px; */
	/* left: 25px; */
  transform:rotate(90Deg) translateX(5px);;
	transition: 0.15s;
	pointer-events: none;
}

/* BACK TO TOP */
#btn-back-to-top {
    position: fixed;
    border-radius: 50%;
    background-color: {{ navbarbgcolor }};    
    background-image: linear-gradient(to bottom,{{ navbarbgcolor }},#11171B);
    bottom: 100px;
    right: 25px;    
    display: none;
    z-index: 990;
  }

  #btn-back-to-top:hover {
    cursor: pointer;
  }

  /* TRANSITION WRAPPER for collection page */
  .img-wrapper {  
    width: 100%;
    height: 100%;
    overflow: hidden; 
  }
  
  .inner-img {
    transition: 0.3s ease;
  }
  
  .inner-img:hover {
      transform: scale(1.1);
  }
    
  .text-hover {
    opacity: 0;
    font-family: {{ font_header.family }}, {{ font_header.fallback_families }};
    color: #fff;
    font-size: 2rem;
    line-height: 1.5em;
    text-shadow: 2px 2px 2px #000;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;  
    z-index: -1;
  }
    
  .inner-img:hover .text-hover {
    opacity: 1;
    z-index: 1;
    pointer-events: none;
  }   

input:focus {
  outline: 3px solid {{ navbarbgcolor }} !important;
  outline-offset: 0;
}

 select:focus {
  outline: 3px solid {{ navbarbgcolor }} !important;
  outline-offset: 0;
 }

a.btn {
  display: inline-block;
  font-family: {{ font_body.family }}, {{ font_body.fallback_families }};
  font-size: 1rem;
  font-weight: 800;
  letter-spacing: 1.5px;
  padding: 11px 30px;
  background-color: {{ navbarbgcolor }};
  background-image: linear-gradient(to bottom,{{ navbarbgcolor }},#11171B);
  color: #fff;
  text-align: center;
  text-transform: uppercase;
  border-radius: 0;
}

  a.btn:hover {
    filter: brightness(120%);    
  }
  a.btn:focus {
    outline: 3px solid {{ producttextcolorhover }};
    outline-offset: 0;
  }
  a.btn:active {
    outline: 3px solid {{ producttextcolorhover }};
    outline-offset: 0;
  }  

  .btn-add-to-cart {
    display: inline-block;
    font-family: {{ font_body.family }}, {{ font_body.fallback_families }};
    font-size: 1.25rem;
    font-weight: 800;
    letter-spacing: 1.5px;
    padding: 11px 30px;
    background-color: {{ buttoncolor }};
    background-image: linear-gradient(to bottom,{{ buttoncolor }},#11171B);
    color: #fff;
    text-align: center;
    text-transform: uppercase;
    border-width: 0px;
    border-radius: 0;
    border-color: none;   
  }  

  .shopify-payment-button__button--unbranded {
    display: inline-block;
    font-family: {{ font_body.family }}, {{ font_body.fallback_families }};
    font-size: 1.25rem;
    font-weight: 800;
    letter-spacing: 1.5px;
    padding: 11px 30px;
    background-color: {{ buttoncolor }};
    background-image: linear-gradient(to bottom,{{ buttoncolor }},#11171B);
    color: #fff;
    text-align: center;
    text-transform: uppercase;
    border-width: 0px;
    border-radius: 0;
    border-color: none;   
  }

  .shopify-payment-button__button--unbranded:hover {
    filter: brightness(120%) saturate(120%);
