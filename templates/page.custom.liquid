    <div class="row">
        <div class="rcol-12 col-md-8 my-2">
          <div class="section-header text-center">
            <h1>{{ page.title }}</h1>
          </div>
    
          <div class="article-section">
            {{ page.content }}
          </div>

          <div class="article-section">
            {% section 'dynamic-section-1' %}
          </div>    
          <div class="row">
            {% section 'dynamic-section-2' %}      
          </div>  
          <div class="row">
            {% section 'dynamic-collection-1' %}      
          </div>  
          
        </div>
        <div class="col-12 col-md-4 my-2">      
            {% section 'dynamic-sidebar' %}            
          
            {% section 'random-product' %}             
        </div>
    </div>
    
</div>
</div>

