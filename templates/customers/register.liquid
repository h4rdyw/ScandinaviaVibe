
<!-- /templates/customers/register.liquid -->
<div class="container py-5 my-5">
    <div class="login-form">
        {% form 'create_customer' %}

            {{ form.errors | default_errors }}
            <h1 class="h3">{{ 'general.layout.register_text' | t }}</h1>
            <label for="first_name">First Name</label>
            <input class="form-control rounded-0 my-2" type="text" value="" name="customer[first_name]" size="30" />
            
            <label for="last_name">Last Name</label>
            <input class="form-control rounded-0 my-2" type="text" value="" name="customer[last_name]" size="30" />
            
            <label for="email">Email Address</label>
            <input class="form-control rounded-0 my-2" type="email" value="" name="customer[email]" size="30" />
            
            <label for="password">Password</label>
            <input class="form-control rounded-0 my-2" type="password" value="" name="customer[password]" size="30" />
            
            <input type="submit" value="Create Account" class="btn btn-primary btn-lg w-100 rounded-0"/>
            
            {% endform %}       

    </div>
</div>

